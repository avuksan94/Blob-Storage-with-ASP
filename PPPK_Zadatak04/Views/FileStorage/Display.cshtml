@using PPPK_Zadatak04.Models;
@model FileDisplayVM

@{
    ViewBag.Title = "File Display";
}

<h2>File Viewer</h2>

@{
    var fileExtension = Model.FileExtension.ToLower();
}

@if (fileExtension == ".jpg" || fileExtension == ".jpeg" || fileExtension == ".png" || fileExtension == ".gif" || fileExtension == ".svg")
{
    <img src="@Model.FileUrl" alt="Image" style="max-width: 100%; height: auto;" />
}
else if (fileExtension == ".pdf")
{
    <iframe src="@Model.FileUrl" style="width:100%; height:600px;" frameborder="0"></iframe>
}
else if (fileExtension == ".tiff" || fileExtension == ".tif")
{
    <p>TIFF files are not supported for preview in most browsers. Please download the file to view it.</p>
}
else
{
    <p>File format not supported for preview.</p>
}
